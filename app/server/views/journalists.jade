extends panel

block content
	form( method="post")#journalists-form.well
		h1= title
		p#sub1.subheading
			span Find your audience among 
			if title == 'Outlets Search'
				span= user.outletsCount 
				span  outlets
			else if title == 'Journalists Search'
				span= user.journalistsCount
				span  journalists
			span  in our database
		label Keywords
		input(type='text', name='keyword', id='keyword' placeholder='e.g. Fashion or Freelance')
		div.clear-fix
		button(type='submit')#journalists-form.btn.btn-primary
			i.icon-search.icon-magnifier(style='padding-right: 5px;')
			| Search
		.spinner2(style='display: none;')
			.bounce1
			.bounce2
			.bounce3
		div.g-recaptcha(data-sitekey='6Lf_RB8TAAAAALmnUePql-2-maZV-8x2StNrGFs2')
	table#journalists_table.table-hover.no-footer.table-striped(style='width: 100%;')
	br
	
	include modals/alert
	include modals/confirm
	include modals/form-errors
block scripts
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js')
	script(src='/js/application.js')
	script(src='/js/plugins.js')
	script(src='/js/views/journalists.js')
	script(src='/js/form-validators/journalistsValidator.js')
	script(src='/js/jquery.dataTables.min.js')
	script(src='https://www.google.com/recaptcha/api.js')