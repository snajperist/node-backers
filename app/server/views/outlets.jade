extends panel

block content
	form( method="post")#outlets-form.well
		h1 Outlets Search
		p#sub1.subheading
			span Find your audience among 
			span= user.outletsCount
			span  outlets in our database
		label Keywords 
		input(type='text', name='keyword', id='keyword' placeholder='e.g. Fashion or Freelance')
		div.clear-fix
		button(type='submit')#outlets-form.btn.btn-primary
			i.icon-search.icon-magnifier(style='padding-right: 5px;')
			| Search
		.spinner2(style='display: none;')
			.bounce1
			.bounce2
			.bounce3
	table#outlets_table.table-hover.no-footer.table-striped(style='width: 100%;')
	br
	
	include modals/alert
	include modals/confirm
	include modals/form-errors
block scripts
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js')
	script(src='/js/application.js')
	script(src='/js/plugins.js')
	script(src='/js/views/outlets.js')
	script(src='/js/form-validators/outletsValidator.js')
	script(src='/js/jquery.dataTables.min.js')