extends panel

block content
	form( method="post")#backers-form.well
		h1 Backers Search
		p#sub1.subheading
			span Find your audience among 
			span= user.backersCount
			span  backers in our database
		label Platform
		select(name='platform', form='backers-form' id='platform')
			option(value='') Any Platform
			option(value='kickstarter') Kickstarter
			option(value='indiegogo') Indiegogo
		label Category
		select(name='category', form='backers-form' id='category')
			option(value='') Select Category
			option(value='Animals') Animals
			option(value='Art') Art
			option(value='Business') Business
			option(value='Comics') Comics
			option(value='Crafts') Crafts
			option(value='Community') Community
			option(value='Dance') Dance
			option(value='Design') Design
			option(value='Education') Education
			option(value='Environment') Environment
			option(value='Fashion') Fashion
			option(value='Film & Video') Film & Video
			option(value='Food') Food
			option(value='Games') Games
			option(value='Journalism') Journalism
			option(value='Health') Health
			option(value='Music') Music
			option(value='Photography') Photography
			option(value='Politics') Politics
			option(value='Publishing') Publishing
			option(value='Religion') Religion
			option(value='Sports') Sports
			option(value='Technology') Technology
			option(value='Theater') Theater
			option(value='Transmedia') Transmedia
		label Location
		input(type='text', name='location', id='location-tf' placeholder='e.g. United States')
		label Backed 
		input(type='text', name='backed', id='backed-tf' placeholder='minimum, e.g. 5')
		div.clear-fix
		button(type='submit')#backers-form.btn.btn-primary
			i.icon-search.icon-magnifier(style='padding-right: 5px;')
			| Search
		.spinner2(style='display: none;')
			.bounce1
			.bounce2
			.bounce3
	table#backers_table.table-hover.no-footer.table-striped(style='width: 100%;')
	br
	
	include modals/alert
	include modals/confirm
	include modals/form-errors
block scripts
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js')
	script(src='/js/application.js')
	script(src='/js/plugins.js')
	script(src='/js/views/backers.js')
	script(src='/js/form-validators/backersValidator.js')
	script(src='/js/jquery.dataTables.min.js')