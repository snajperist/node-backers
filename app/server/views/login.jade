    link(rel='shortcut icon', href='/image/favicon.png', type='image/png')
  body
    #modal-alert.modal.fade(role='dialog')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') ×
            h4.modal-title
          .modal-body
            p
          .modal-footer(style='background-color: #f5f5f5; border-top: 1px solid #ddd;')
            button.btn.btn-warning(type='button', data-dismiss='modal') Close
    #modal-confirm.modal.fade(role='dialog')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') ×
            h4.modal-title
          .modal-body
            p
          .modal-footer(style='background-color: #f5f5f5; border-top: 1px solid #ddd;')
            button.btn(type='button', data-dismiss='modal') Close
            button#confirm-delete.btn.btn-danger(type='button', data-dismiss='modal')
    .loader
      .spinner
        .double-bounce1
        .double-bounce2
    .nav-container
      nav.top-bar.overlay-bar
        .container
          .row.utility-menu
            .col-sm-12
              .utility-inner.clearfix
                span.alt-font
                  i.icon.icon_globe-2
                  |   www.backerslab.com
                span(style='margin-left: 20px;') 
                span.alt-font
                  i.icon.icon_mail
                  |   info@backerslab.com
                .pull-right
                  a.btn.btn-primary.btn-filled.btn-xs(href='/signup') Signup
                  a(href='http://backerslab.com/signup', <='', a='')
    .mobile-toggle
      i.icon.icon_menu
    .main-container
      section.no-pad.login-page.fullscreen-element
        .background-image-holder
          img.background-image(alt='Poster Image For Mobiles', src='login-style/hero16.jpg')
        .container.align-vertical
          .row
            .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.text-center
              h1.text-white Login to continue
              .photo-form-wrapper.clearfix
                form(method='post')#login-form
                  input.form-email(type='text', placeholder='Email Address', name='user', id='user-tf')
                  input.form-password(type='password', placeholder='Password', name='pass', id='pass-tf')
                  button.login-btn.btn-filled(type='submit', value='Login')#btn-login.btn.btn-primary
                    | Sign in
              a.text-white(href='/signup') Create an account ➞
              br
              a.text-white(href='#') I've forgotten my password
    .footer-container
    include modals/alert
    include modals/lost-password
