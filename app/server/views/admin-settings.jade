extends panel

block content
	form( method="post")#settings-form.well
		h1 Admin Settings
		p#sub1.subheading Edit settings and click Save
		input(type='hidden', name='type', value='backers')
		label Backers On/Off
		input(type='checkbox', name='backers', id='backers-tf')
		div.clear-fix
		button(type='submit')#settings-form.btn.btn-primary
			i.icon-magnifier.icon-white
			| Save
	
	include modals/alert
	include modals/confirm
	include modals/form-errors
block scripts
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js')
	script(src='/js/application.js')
	script(src='/js/plugins.js')
	script(src='/js/views/admin-settings.js')
	script(src='/js/controllers/adminController.js')
	script(src='/js/jquery.dataTables.min.js')