extends panel

block content
	h1= title
	p#sub1.subheading
		span Find contact details for saved
		if title == 'Contact Outlets'
			span  outlets
		else if title == 'Contact Journalists'
			span  journalists
	form(method="post")#journalists-form.well
		input(type='hidden', name='type', value='search')
		label Name
		input(type='text', name='name', id='name' placeholder='e.g. Mike Butcher')
		button(type='submit')#journalists-form.btn.btn-primary
			i.icon-search.icon-magnifier(style='padding-right: 5px;')
			| Search
		.spinner2(style='display: none;')
			.bounce1
			.bounce2
			.bounce3
	br
	form( method="post")#send-form.well.span6.hidden
		h1 Send an email
		hr
		input(type='hidden', name='type', value='send')
		label To 
		input(type='text', name='to', value='', id='to')
		br
		label Subject 
		input(type='text', name='subject', id='subject')
		br
		label(for='textarea', style='vertical-align: middle;') Message
		textarea(type='text', name='message', id='message', rows='10', cols='40' placeholder='type your email message here')
		br
		button(type='submit')#send-form.btn.btn-primary
			i.icon-search.icon-envelope(style='padding-right: 5px;')
			| Send
	br
	table#journalists_table.table-hover.no-footer.table-striped(style='width: 100%;')
	include modals/alert
	include modals/confirm
	include modals/form-errors
block scripts
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
	script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js')
	script(src='/js/application.js')
	script(src='/js/plugins.js')
	script(src='/js/views/contact-journalists.js')
	script(src='/js/form-validators/journalistsValidator.js')
	script(src='/js/form-validators/emailValidator.js')
	script(src='/js/jquery.dataTables.min.js')